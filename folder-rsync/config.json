{
  "name": "Folder Rsync",
  "version": "0.0.14",
  "slug": "folderrsync",
  "description": "Transfers the Hass.io folders to a remote rsync server.",
  "url" : "https://github.com/LinusHoppe/hassio-addons",
  "startup": "once",
  "boot": "manual",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "map": ["config", "addons", "backup", "share", "ssl", "media"],
  "options": {
    "rsyncserver": "server",
    "rootfolder": "hassio-sync",
    "username": "user",
    "password": "password",
    "syncconfig": true,
    "syncaddons": true,
    "syncbackup": true,
    "syncshare": true,
    "syncssl": true,
    "syncmedia": true
  },
  "schema": {
    "rsyncserver": "str",
    "rootfolder": "str",
    "username": "str",
    "password": "str",
    "syncconfig": "bool",
    "syncaddons": "bool",
    "syncbackup": "bool",
    "syncshare": "bool",
    "syncssl": "bool",
    "syncmedia": "bool"
  }
}
