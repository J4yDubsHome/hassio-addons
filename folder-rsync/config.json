{
  "name": "Folder Rsync",
  "version": "0.0.5a",
  "slug": "folderrsync",
  "description": "Transfers the Hass.io folders to a remote rsync server.",
  "url" : "https://github.com/carstenschroeder/hassio-addons/blob/master/README.md",
  "startup": "before",
  "boot": "auto",
  "map": ["config", "addons", "backup", "share", "ssl"],
  "options": {
	  "rsyncserver": "server",
    "rootfolder": "hassio-sync",
    "username": "user",
    "password": "password"
  },
  "schema": {
	  "rsyncserver": "str",
    "rootfolder": "str",
    "username": "str",
    "password": "str"
  }
}
